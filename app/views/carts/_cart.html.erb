<% unless cart.line_items.empty? %>
  <div class="cart_title"><%= t("carts.cart.title") %></div>
  <table>
    <div id="line_item">
      <%= render cart.line_items %>
    </div>

    <tr class="total_line">
      <td colspan="2">合計</td>
      <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
    </tr>
  </table>

  <%= button_to t("carts.cart.checkout"), new_order_path, method: :get %>
  <%= button_to t("carts.cart.empty"), cart, method: :delete, 
      confirm: 'Are you sure ?' %>
<% end %>
